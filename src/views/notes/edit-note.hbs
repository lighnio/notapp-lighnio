<div class="col-md-8 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{data.id}}?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Title"
            value="{{data.title}}"
          />
          <div class="form-group">
            <textarea
              name="description"
              class="form-control my-3"
            >{{data.description}}</textarea>
          </div>
          <div class="form-group d-grid gap-2">
              <button class="btn btn-primary" type="submit">
                Save
              </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>