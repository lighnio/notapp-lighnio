{{#each errors}}
  <div class="col-md mx-auto alert alert-danger alert-dismissible fade show" role="alert">
   {{text}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/each}}

<div class="col-md mx-auto">
  <div class="card">
    <div class="card-header">
      <h1>New Note</h1>
    </div>
    <div class="card-body">
      <h3>Form</h3>
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="title"
            class="form-control mb-3"
            placeholder="Title"
            autocomplete="off"
            autofocus
          />
        </div>
        <div class="form-group">
          <textarea
            name="description"
            class="form-control mb-3"
            placeholder="Description"
            autocomplete="off"
          ></textarea>
        </div>
        <div class="form-group d-grid gap-2">
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>